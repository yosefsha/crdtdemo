services:
  traefik:
    image: traefik:v2.11
    command:
      - "--log.level=DEBUG"
      - "--api.dashboard=true"
      - "--api=true"
      - "--api.insecure=true"
      - "--providers.docker=true"
      - "--entrypoints.web.address=:80"
      - "--entrypoints.traefik.address=:8080"
    ports:
      - "80:80"
      - "8080:8080"
    volumes:
      - "/var/run/docker.sock:/var/run/docker.sock:ro"
    networks:
      - app-network

  server:
    labels:
      - "traefik.http.routers.server.rule=PathPrefix(`/api`, `/socket`)"
      - "traefik.http.services.server.loadbalancer.server.port=5001"
      - "traefik.http.middlewares.server-body-limit.buffering.maxRequestBodyBytes=52428800"
      - "traefik.http.routers.server.middlewares=server-body-limit"
    build:
      context: .
      dockerfile: ./server/Dockerfile
    networks:
      - app-network
    depends_on:
      - postgres
      - rabbit-mq
    environment:
      - POSTGRES_URL=postgresql://postgres:postgres@postgres:5432/crdtdemo
      - JWT_SECRET=supersecret
      - RABBIT_URL=amqp://rabbit-mq
      
  client:
    labels:
      - "traefik.enable=true"
      - "traefik.http.routers.client.rule=PathPrefix(\`/\`)"
      - "traefik.http.routers.client.priority=1"
      - "traefik.http.services.client.loadbalancer.server.port=80"
    build:
      context: .
      dockerfile: ./rclient/Dockerfile
      args:
        API_URL: /api
        MYENV: "docker"
        SOCKET_PATH: /socket
    networks:
      - app-network
    depends_on:
      - server

  auth:
    build: ./auth
    environment:
      - JWT_SECRET=supersecret
      - POSTGRES_URL=postgresql://postgres:postgres@postgres:5432/crdtdemo
    depends_on:
      - postgres
    networks:
      - app-network

  postgres:
    image: postgres:15-alpine
    environment:
      - POSTGRES_USER=postgres
      - POSTGRES_PASSWORD=postgres
      - POSTGRES_DB=crdtdemo
    ports:
      - "5432:5432"
    networks:
      - app-network
    volumes:
      - postgres-data:/var/lib/postgresql/data
    healthcheck:
      test: ["CMD-SHELL", "pg_isready -U postgres"]
      interval: 10s
      timeout: 5s
      retries: 5

  pgadmin:
    image: dpage/pgadmin4
    environment:
      - PGADMIN_DEFAULT_EMAIL=admin@admin.com
      - PGADMIN_DEFAULT_PASSWORD=admin
    ports:
      - "5050:80"
    networks:
      - app-network
    depends_on:
      - postgres

  rabbit-mq:
    image: rabbitmq:3
    environment:
      RABBITMQ_DEFAULT_USER: guest
      RABBITMQ_DEFAULT_PASS: guest
    networks:
      - app-network
    healthcheck:
      test: ["CMD", "rabbitmq-diagnostics", "-q", "ping"]
      interval: 10s
      timeout: 5s
      retries: 5
      start_period: 30s

  rabbit-mq-ui:
    image: rabbitmq:3-management
    ports:
      - "15672:15672"
    environment:
      - RABBITMQ_DEFAULT_USER=guest
      - RABBITMQ_DEFAULT_PASS=guest
    networks:
      - app-network

  enrich-worker:
    build: ./enrich-worker
    environment:
      - RABBIT_URL=amqp://rabbit-mq
      - SECRETS_PATH=/run/secrets/apiconf.json
    volumes:
      - ./secrets/apiconf.json:/run/secrets/apiconf.json:ro
    networks:
      - app-network
    depends_on:
      rabbit-mq:
        condition: service_healthy
    restart: unless-stopped

networks:
  app-network:

volumes:
  postgres-data:
