    "jest": "^29.7.0",
    "jsdom": "^25.0.1",
    "prettier": "^3.4.2",
    "ts-jest": "^29.2.5"
  },
  "jest": {
    "moduleNameMapper": {
      "^@crdtdemo/shared$": "<rootDir>/../shared/index.ts",
      "^@crdtdemo/shared/(.*)$": "<rootDir>/../shared/$1",
      "\\.(css|less|scss|sass)$": "identity-obj-proxy",
